package board.model;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import db.DBManager;

public class CommentsDAO {

	DBManager manager = new DBManager();
	
	//insert
	public int insert(Comments comments) {
		Connection con = null;
		PreparedStatement pstmt=null;
		int result=0;
		
		con=manager.getConnection();
		String sql="insert into comments(news_id, author, msg) values(?,?,?)";
		try {
			pstmt=con.prepareStatement(sql);
			pstmt.setInt( 1, comments.getNews_id());
			pstmt.setString(2, comments.getAuthor());
			pstmt.setString(3, comments.getMsg());
			result = pstmt.executeUpdate(); //½ÇÇà
		} catch (SQLException e) {
			e.printStackTrace();
		}finally {
			manager.release(con, pstmt);
		}
		return result;
	}
	
	//뉴스 한건에 소속된 하위 코멘트 목록 가져오가ㅣ 
	
	public List selectAll(int news_id) {
		Connection con = null;
		PreparedStatement pstmt = null;
		ResultSet rs= null;
		String sql = "select * from comments wherer news_id = ?";
		ArrayList<Comments> list = new ArrayList<Comments>();
		try {
			pstmt = con.prepareStatement(sql);
			pstmt.setInt(1,news_id);
			rs = pstmt.executeQuery();
			
			while(rs.next()) {
				Comments coms = new Comments();
				coms.setComments_id(rs.getInt("comments_id"));
				coms.setNews_id(rs.getInt("news_id"));
				coms.setAuthor(rs.getString("author"));
				coms.setCdate(rs.getString("cdate"));
				coms.setMsg(rs.getString("msg"));
				
				list.add(coms);
			}
			
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}finally {
			manager.release(con, pstmt, rs);
		}
		
		return list;
				
	
	}
	
}
