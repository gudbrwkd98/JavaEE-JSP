/*
 * 지금까지는 DAO 의 코드 기술을 JDBC 로 이용하였기 때문에 쿼리문보다 그외의 코드가 더 장황했었다..
 * 따라서 이번 DAO 에서는 mybatis 프레임 웍을 도입하여 코드를 보다 간결하게 작성한다
 * */
package emp.model;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.apache.ibatis.session.SqlSessionFactory;

import db.MybatisManager;

public class DeptDAO {
	//DAO 에서 sql 문이 들어있는 xml 을 호출하자!! 이때 어떤 쿼리수행을 원하는 지를 구분하기 위해서는 
	//xml 태그에 부여한 id 를 비교해보자 
	//xml 태그를 호출하기 위해서는 mybatis에서 지원하는 SqlSession 이 필요하고 현재는 mybatisManager 클래스의 멤버로 
	//두엇다
	
	MybatisManager manager = new MybatisManager();
	SqlSessionFactory factory;
	public DeptDAO() {
		// TODO Auto-generated constructor stub
		factory = manager.getSqlSessionFactory();
	}
	
	//모든 데이터 가져오기 
	public List selectAll() {
		SqlSession session = factory.openSession(); //쿼리문 수행객체 생성
		return session.selectList("mybatis.config.Dept.selectAll");
		
	}
}
